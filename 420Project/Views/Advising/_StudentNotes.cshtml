@{ 
    Layout = null;
}

<table id="advising-notes-table" class="table table-striped table-bordered" data-toggle="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Advisor</th>
            <th>Note</th>
        </tr>
    </thead>
    <tbody id="advising-notes-body">
        @for (int i = 1; i <= 5; i++)
        {
            <tr class="advising-notes-row">
                <td>3/2/2017</td>
                <td>Advisor 1</td>
                <td>
                    Student needs to buy books or something
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="col-xs-12">
    <div class="form-group">
        <label class="control-label">New Message</label>
        <textarea class="form-control" rows="5" id="comment"></textarea>
    </div>
</div>

<div class="col-xs-12">
    <div class="btn btn-success"><span class="glyphicon glyphicon-plus-sign"></span> Add Message</div>
</div>