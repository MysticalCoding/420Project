@{ 
    Layout = null;
}
<div class="col-xs-12">
    <div class="btn btn-success"><span class="glyphicon glyphicon-save"></span> Save Notes</div>
</div>

<div class="col-xs-12">
    <br />
    <div class="form-group">
        <label class="control-label">My Notes</label>
        <textarea class="form-control" rows="5" id="comment"></textarea>
    </div>
</div>

<table id="advising-notes-table" class="table table-striped table-bordered" data-toggle="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Advisor</th>
            <th>Note</th>
        </tr>
    </thead>
    <tbody id="advising-notes-body">
        @for (int i = 1; i <= 2; i++)
        {
            <tr class="advising-notes-row">
                <td>3/2/2017</td>
                <td>Advisor @i</td>
                <td>
                    Test Student Notes.
                </td>
            </tr>
        }
    </tbody>
</table>



