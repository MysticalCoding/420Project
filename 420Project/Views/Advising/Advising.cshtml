@{
    Layout = null;
}

<script>
    $(document).ready(function () {
        $('#advising-tab-compliance').click(function () {

            $.ajax({
                type: "GET",
                url: "@(Url.Action("Compliance", "Advising"))",
                success: function (data) {
                    $('.advising-tab-active').removeClass('active');
                    $('.advising-tab-active').removeClass('advising-tab-active');
                    $('#advising-tab-compliance').parent().addClass('active');
                    $('#advising-tab-compliance').parent().addClass('advising-tab-active');
                    $('#advising-tab-content').html(data);
                },
            error: function (data) {
                alert('error');
            }
        })           
        })

        $('#advising-tab-program').click(function () {

            $.ajax({
                type: "GET",
                url: "@(Url.Action("Program", "Advising"))",
                success: function (data) {
                    $('.advising-tab-active').removeClass('active');
                    $('.advising-tab-active').removeClass('advising-tab-active');
                    $('#advising-tab-program').parent().addClass('active');
                    $('#advising-tab-program').parent().addClass('advising-tab-active');
                    $('#advising-tab-content').html(data);
                },
            error: function (data) {
                alert('error');
            }
            })
        })

        $('#advising-tab-plan').click(function () {

            $.ajax({
                type: "GET",
                url: "@(Url.Action("Plan", "Advising"))",
                success: function (data) {
                    $('.advising-tab-active').removeClass('active');
                    $('.advising-tab-active').removeClass('advising-tab-active');
                    $('#advising-tab-plan').parent().addClass('active');
                    $('#advising-tab-plan').parent().addClass('advising-tab-active');
                    $('#advising-tab-content').html(data);
                },
            error: function (data) {
                alert('error');
            }
        })
        })

        $('#advising-tab-petition').click(function () {

            $.ajax({
                type: "GET",
                url: "@(Url.Action("Petition", "Advising"))",
                success: function (data) {
                    $('.advising-tab-active').removeClass('active');
                    $('.advising-tab-active').removeClass('advising-tab-active');
                    $('#advising-tab-petition').parent().addClass('active');
                    $('#advising-tab-petition').parent().addClass('advising-tab-active');
                    $('#advising-tab-content').html(data);
                },
            error: function (data) {
                alert('error');
            }
        })
    })


    })
</script>
