@model _420Project.Models.StudentCompliance

@{
    Layout = null;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.SCId)

        <div class="row">
            <div class="col-xs-12">
                <div class="col-xs-6">
                    <div class="col-md-12 text-center"><h4><b>Type</b></h4></div>
                    <div class="col-md-12 text-center">Compliance 1</div>
                </div>
                <div class="col-xs-6">
                    <div class="col-md-12 text-center"><h4><B>Student</B></h4></div>
                    <div class="col-md-12 text-center">Student 1</div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-xs-12">
                <hr />
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-12 text-left"><b>Submission Date</b></div>
            <div class="col-md-12">
                @Html.EditorFor(model => model.SubmissionDate, new { htmlAttributes = new { @class = "form-control", @id = "advising-compliance-sub-date" } })
                @Html.ValidationMessageFor(model => model.SubmissionDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12 text-left"><b>Expiration Date</b></div>
            <div class="col-md-12">
                @Html.EditorFor(model => model.ExpirationDate, new { htmlAttributes = new { @class = "form-control", @id = "advising-compliance-exp-date" } })
                @Html.ValidationMessageFor(model => model.ExpirationDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-12 text-left"><b>Status</b></div>

        <div class="btn-group" role="group" aria-label="...">
            <button type="button" class="btn btn-default"><span class="glyphicon glyphicon-unchecked"></span> None</button>
            <button type="button" class="btn btn-default"><span class="glyphicon glyphicon-flag"></span> Pending</button>
            <button type="button" class="btn btn-default"><span class="glyphicon glyphicon-remove"></span> Denied</button>
            <button type="button" class="btn btn-primary"><span class="glyphicon glyphicon-ok"></span> Approved</button>
        </div>

        <br />
        <br />

        <div class="btn btn-default"><span class="glyphicon glyphicon-upload"></span> Upload Document</div>

        <br />
        <br />

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </div>

        <input type="hidden" autofocus="true" />
    </div>
}

<script>
    $(function () {
        $("#advising-compliance-exp-date").datepicker({
            showOn: "focus"
        });
        $("#advising-compliance-sub-date").datepicker({
            showOn: "focus"
        });
    });
</script>
