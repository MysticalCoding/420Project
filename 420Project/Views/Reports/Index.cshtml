
@{
    ViewBag.Title = "Index";
}
@section navlinkrep{
        navigation-link-active
}
@section context{
<div id="advising-status-filter" class="col-xs-2">
    <a href="/Dashboard" class="btn btn-default"><span class="glyphicon glyphicon-arrow-left"></span> Back</a>
</div>

<div class="col-xs-4">
    <p class="col-xs-6 text-right context-label context-div"><b>Report Type:</b></p>
    <div class="col-xs-6 dropdown context-div">
        <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown">
            Student
            <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
            <li><a href="#">Student</a></li>
            <li id="report-type-compliance"><a href="#">Compliance</a></li>
        </ul>
    </div>
</div>
    
}
<script>
    $(document).ready(function () {
        $('#nav-reports').addClass('active');

        $("#report-panel").hide();
        $("#report-panel").removeClass('hidden');
        $("#report-panel").show('blind', {}, 500);

        $('#report-type-compliance').click(function () {
            $.ajax({
                type: "GET",
                url: "@(Url.Action("Compliance", "Reports"))",
                success: function (data) {
                    $('#report-row').html(data);
                },
            error: function (data) {
                alert('error');

            }
        })
    })
    })
</script>


<div id="report-row" class="row">
    <div class="col-xs-4">
        <div class="panel panel-default">
            <div class="panel-heading"><h3>Student Filters</h3></div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-xs-12">
                        <h3><b>Total Students:</b> 100</h3>
                    </div>
                    <div class="col-xs-12">
                        <div class="col-xs-6">
                            <br />

                            <div class="form-group">
                                <div class="col-md-12 text-left"><b>Year</b></div>
                                <div class="col-md-12">
                                    <span class="checkbox">
                                        <label><input type="checkbox" value="">Freshman</label>
                                    </span>
                                    <span class="checkbox">
                                        <label><input type="checkbox" value="">Sophmore</label>
                                    </span>
                                    <span class="checkbox">
                                        <label><input type="checkbox" value="">Junior</label>
                                    </span>
                                    <span class="checkbox">
                                        <label><input type="checkbox" value="">Senior</label>
                                    </span>
                                </div>
                            </div>

                        </div>

                        <div class="col-xs-6">
                            <br />

                            <div class="form-group">
                                <div class="col-md-12 text-left"><b>Program</b></div>
                                <div class="col-md-12">
                                    <span class="checkbox">
                                        <label><input type="checkbox" value="">BSN - LD</label>
                                    </span>
                                    <span class="checkbox">
                                        <label><input type="checkbox" value="">BSN - UD</label>
                                    </span>
                                    <span class="checkbox">
                                        <label><input type="checkbox" value="">Master</label>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-xs-12">
                        <div class="col-xs-6">
                            <br />

                            <div class="form-group">

                                <div class="col-md-12 text-left"><b>Advisor</b></div>
                                <div class="col-md-12">
                                    <div class="dropdown">
                                        <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown">
                                            All
                                            <span class="caret"></span>
                                        </button>
                                        <ul class="dropdown-menu">
                                            <li><a href="#">All</a></li>
                                            <li><a href="#">Advisor 1</a></li>
                                            <li><a href="#">Advisor 2</a></li>
                                        </ul>
                                    </div>
                                </div>

                                <br />

                                <div class="col-md-12 text-left"><b>Campus</b></div>
                                <div class="col-md-12">
                                    <div class="dropdown">
                                        <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown">
                                            All
                                            <span class="caret"></span>
                                        </button>
                                        <ul class="dropdown-menu">
                                            <li><a href="#">All</a></li>
                                            <li><a href="#">Louisville</a></li>
                                            <li><a href="#">Other</a></li>
                                        </ul>
                                    </div>
                                </div>

                            </div>

                            <div class="form-group">
                                <div class="col-xs-12">
                                    <div class="btn btn-primary btn-lg"><span class="glyphicon glyphicon-filter"></span> Filter</div>
                                </div>

                            </div>

                        </div>

                        <div class="col-xs-6">
                            <br />

                            <div class="form-group">
                                <div class="col-md-12 text-left"><b>Status</b></div>
                                <div class="col-md-12">
                                    <span class="checkbox">
                                        <label><input type="checkbox" value="">Unenrolled</label>
                                    </span>
                                    <span class="checkbox">
                                        <label><input type="checkbox" value="">Active</label>
                                    </span>
                                    <span class="checkbox">
                                        <label><input type="checkbox" value="">Inactive</label>
                                    </span>
                                    <span class="checkbox">
                                        <label><input type="checkbox" value="">Graduated</label>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xs-8">
        <div id="report-panel" class="panel panel-default hidden">
            <div class="panel-heading"><h3>Students</h3></div>
            <table id="report-table" class="panel-body table" data-search="true" data-show-columns="true" data-pagination="true" data-advanced-search="true" data-id-table="advancedTable">
                <thead>
                    <tr>
                        <th data-field="fname" data-sortable="true">First Name</th>
                        <th data-field="lname" data-sortable="true">Last Name</th>
                        <th data-field="program" data-sortable="true">Program</th>
                        <th data-field="status" data-sortable="true">Status</th>
                        <th data-field="year" data-sortable="true">Year</th>
                        <th data-field="campus" data-sortable="true">Campus</th>
                        <th data-sortable="false">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 1; i <= 100; i++)
                    {
                    <tr>
                        <td>First Name</td>
                        <td>Last Name</td>
                        <td>Program</td>
                        <td>Status</td>
                        <td>Year</td>
                        <td>Campus</td>
                        <td class="text-center">
                            <a href="/Reports/ReportCard/" target="_blank"><span class="glyphicon glyphicon-list text-center"></span></a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    $('#report-table').bootstrapTable({
        options: {
            advancedSearch: true
        }
    });
</script>

