@{
    ViewBag.Title = "Index";
}
@section navlinkrep{
        navigation-link-active
}
            <!-- Trigger the modal with a button -->
<button id="advising-group-filters" type="button" class="btn btn-danger btn-md" data-toggle="modal" data-target="#group-filter-modal"><span class="glyphicon glyphicon-filter"></span> Filter</button>

<!-- Modal -->
<div id="group-filter-modal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Filter Options</h4>
            </div>
            <div id="group-filter-modal-body" class="modal-body">

            </div>
            <div class="modal-footer">
                <button id="ReportCloseModel" type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>


<div class="row">
    <div class="col-xs-12">
        <div class="panel panel-default panel-main">
            <div class="panel-body">

                <table id="report-table" class="panel-body table" data-search="true" data-show-columns="true" data-pagination="true" data-advanced-search="true" data-id-table="advancedTable"  data-toolbar="#advising-group-filters">
                    <thead>
                        <tr>
                            <th data-field="fname" data-sortable="true">First Name</th>
                            <th data-field="lname" data-sortable="true">Last Name</th>
                            <th data-field="program" data-sortable="true">Program</th>
                            <th data-field="status" data-sortable="true">Status</th>
                            <th data-field="year" data-sortable="true">Year</th>
                            <th data-field="campus" data-sortable="true">Campus</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 1; i <= 100; i++)
                        {
                            <tr>
                                <td>First Name</td>
                                <td>Last Name</td>
                                <td>Program</td>
                                <td>Status</td>
                                <td>Year</td>
                                <td>Campus</td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>

<script>
    $('#report-table').bootstrapTable({
        options: {
            advancedSearch: true
        }
    });

    // Get group filter options
    $.ajax({
        type: "GET",
        url: "@(Url.Action("_List", "GroupStuff"))",
        success: function (data) {
        $('#group-filter-modal-body').html(data);
    },
    error: function (data) {
    }
    })
</script>

