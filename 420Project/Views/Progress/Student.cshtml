                                    HttpMethod = "GET",
                                    OnSuccess= "progressStudentAdd();"
                                },
                                new { @class = "btn btn-default btn-md glyphicon glyphicon-list-alt" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
