@using _420Project.Models
@model IEnumerable<Course>
@{ 
    Layout = null;
}

<div class="panel-heading"><h3>Add Courses</h3></div>
<table id="progress-student-courses-add-table" data-toggle="table" class="table table-striped panel-body" data-click-to-select="true">
    <thead>
        <tr>
            <th data-checkbox="true"></th>
            <th>Course</th>
            <th>Title</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody id="progress-student-courses-body">
        @foreach (var c in Model)
        {
            <tr class='progress-student-course-row' data-course-id='@c.CourseId'>
                <td></td>
                <td>@c.CourseString</td>
                <td>@c.Title</td>
                <td>@c.Description</td>
            </tr>
        }

    </tbody>
</table>
<div class="panel-footer">
    <button id="student-progress-add-courses-button" type="button" class="btn btn-default" aria-label="Left Align">
        <span class="glyphicon glyphicon-align-left" aria-hidden="true">Submit</span>
    </button>

</div>

